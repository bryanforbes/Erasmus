{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:daily",
    ":enablePreCommit"
  ],
  "assignees": ["bryanforbes"],
  "timezone": "America/Chicago",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchDepTypes": ["dev-dependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "dev dependencies (non-major)"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
