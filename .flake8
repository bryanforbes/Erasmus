[flake8]
max-line-length = 80
extend-select = B,C,T4,B9,Y0,TC1,SIM9
extend-exclude =
    .venv*,
    alembic
ignore = E203, E266, E501, W503, PT004,
    PIE791, # Duplicate of B015
    PIE792, # Duplicate of SIM120
    PIE797  # Duplicate of SIM210
per-file-ignores =
    *.pyi: F401, F403, F405, F811, E127, E128, E203, E266, E301, E302, E305, E501, E701, E704, E741, B303, W503, W504, TC
pytest-fixture-no-parentheses = True
pytest-mark-no-parentheses = True
pytest-parametrize-names-type = csv
